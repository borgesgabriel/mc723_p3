# ####################################################
# Hello World
# ####################################################

CC = mips-elf-gcc
CFLAGS = -msoft-float -specs=archc -mips32
LDFLAGS = -lm

TARGET = pi.mips
INC_DIR := -I.

SRCS := pi.c
OBJS := $(SRCS:.c=.o)

#------------------------------------------------------
.SILENT:

#------------------------------------------------------
.SUFFIXES: .o .c .h

#------------------------------------------------------
all: $(OBJS)
	$(CC) $(OBJS) $(CFLAGS) -o $(TARGET) $(LDFLAGS)
#------------------------------------------------------
clean:
	rm -f *.o *~ $(TARGET)
#------------------------------------------------------
distclean: clean
#------------------------------------------------------
.c.o:
	$(CC) -c $(CFLAGS) $(INC_DIR) -c $<




